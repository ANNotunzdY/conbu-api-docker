FROM ruby:2.4

MAINTAINER CONBU

RUN apt-get update -qq && apt-get install -y build-essential

ENV APP_HOME /app
RUN mkdir $APP_HOME
WORKDIR $APP_HOME

RUN git clone https://github.com/ANNotunzdY/conbu-api-daemon

WORKDIR $APP_HOME/conbu-api-daemon

RUN git checkout feature/iw2017

RUN bundle install

RUN mkdir /root/.pit
COPY default.yaml /root/.pit/

# change settings according to conference
RUN sed -i 's/AP-\[0-9\]{3}/AP[0-9]{1,3}/g' daemon

CMD ["bundle", "exec", "ruby", "daemon"]

